@model Inventory.Models.ProductModel.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Delete Product
                </h2>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this product? This action cannot be undone.
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label text-muted">
                                <i class="fas fa-barcode me-1"></i>Product Code
                            </label>
                            <div class="form-control-plaintext fw-bold fs-5">
                                @Html.DisplayFor(model => model.Code)
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label text-muted">
                                <i class="fas fa-tag me-1"></i>Product Name
                            </label>
                            <div class="form-control-plaintext fw-bold fs-5">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label text-muted">
                                <i class="fas fa-dollar-sign me-1"></i>Price
                            </label>
                            <div class="form-control-plaintext fw-bold fs-5 text-success">
                                $@Html.DisplayFor(model => model.Price)
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mb-4">
                    <label class="form-label text-muted">
                        <i class="fas fa-align-left me-1"></i>Description
                    </label>
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-4">
                        <label class="form-label text-muted">
                            <i class="fas fa-image me-1"></i>Product Image
                        </label>
                        <div class="form-control-plaintext">
                            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-height: 200px;" />
                        </div>
                    </div>
                }
                
                <div class="mb-4">
                    <label class="form-label text-muted">
                        <i class="fas fa-layer-group me-1"></i>Quantity
                    </label>
                    <div class="form-control-plaintext">
                        <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Quantity)</span>
                    </div>
                </div>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
